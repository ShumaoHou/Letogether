.icon {
    display: inline-block;
    width: 50px;
    height: 50px;
    background-size: cover;
    margin: 0 auto;
}

.add-close {
    display: inline-block;
    width: 100%;
    height: 50px;
}

.close-item{
    display: block;
    margin: 0 auto;
    text-align: center;
    height: 38px;
    border-radius: 38px;
    line-height: 38px;
}

.options{
    display: flex;
    flex-direction: row;
    /* position: fixed;   */
    bottom: 2em;
    height: 138rpx;
    width: 100%;
    z-index: 100;
    left: 0;
}
.options .add-item{
    display: block;
    margin: 0 auto;
    width: 143rpx;
    height: 164rpx;
}
