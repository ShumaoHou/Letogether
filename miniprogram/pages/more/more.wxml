<!-- more.wxml -->
<view class="container more">
  <view class="user flex-wrp">
    <button 
    class="user flex-wrp" 
    open-type="getUserInfo" 
    lang="zh_CN" 
    bindgetuserinfo="onGetUserInfo"
    plain="true">
      <view class="avatar flex-item">
        <image class="userinfo-avatar" src="{{thisData.userInfo.avatarUrl}}" background-size="cover"></image>
      </view>
      <view class="user-info flex-item">
          <text class="userinfo-nickname">{{thisData.userInfo.nickName +" "+ thisData.array.genderArray[thisData.userInfo.gender]}}</text>
          <text class="edit">{{thisData.userInfo.region[0] +" "+ thisData.userInfo.region[1] +" "+ thisData.userInfo.region[2] +" "}}</text>
      </view>
    </button>
  </view>

  <view class="my">
    <view class="my-item flex-wrp">
      <view class="myitem-icon flex-item" >
        <image src="../../images/eye.png"></image>
      </view>
      <view class="myitem-name flex-item">
        <text>我的关注</text>
      </view>
    </view>
    <view class="my-item flex-wrp">
      <view class="myitem-icon flex-item" >
        <image src="../../images/star.png"></image>
      </view>
      <view class="myitem-name flex-item">
        <text>我的收藏</text>
      </view>
    </view>
    <view class="my-item flex-wrp">
      <view class="myitem-icon flex-item" >
        <image src="../../images/draft.png"></image>
      </view>
      <view class="myitem-name flex-item">
        <text>我的草稿</text>
      </view>
    </view>
    <view class="my-item flex-wrp">
      <view class="myitem-icon flex-item" >
        <image src="../../images/recent.png"></image>
      </view>
      <view class="myitem-name flex-item">
        <text>最近浏览</text>
      </view>
    </view>
    <view class="my-item flex-wrp">
      <view class="myitem-icon flex-item" >
        <image src="../../images/book.png"></image>
      </view>
      <view class="myitem-name flex-item">
        <text>我的书架</text>
      </view>
    </view>
    <view class="my-item flex-wrp">
      <view class="myitem-icon flex-item" >
        <image src="../../images/live.png"></image>
      </view>
      <view class="myitem-name flex-item">
        <text>我的 Live</text>
      </view>
    </view>
    <view class="my-item flex-wrp">
      <view class="myitem-icon flex-item" >
        <image src="../../images/zhi.png"></image>
      </view>
      <view class="myitem-name flex-item">
        <text>我的值乎</text>
      </view>
    </view>

  </view>
</view>
