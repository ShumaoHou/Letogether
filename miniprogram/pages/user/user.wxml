<!-- more.wxml -->
<view class="container more">
  <view class="user flex-wrp">
    <view class="avatar flex-item" bindtap="doUpload">
      <image class="userinfo-avatar" src="{{thisApp.globalData.userInfo.avatarUrl}}" background-size="cover"></image>
    </view>
  </view>

  <view class="my">

    <view class="my-item flex-wrp">
      <view class="myitem-name flex-item">
        <text>昵称：</text>
      </view>
      <view class="myitem-text flex-item">
        <input maxlength="10" placeholder="{{thisApp.globalData.userInfo.nickName}}" />
      </view>
    </view>

    <view class="my-item flex-wrp">
      <view class="myitem-name flex-item">
        <text>性别：</text>
      </view>
      <picker class="myitem-text flex-item" bindchange="bindPickerChange" value="{{thisApp.globalData.userInfo.gender}}" range="{{thisApp.globalData.array.genderArray}}">
        <view>
          {{thisApp.globalData.array.genderArray[thisApp.globalData.userInfo.gender]}}
        </view>
      </picker>
    </view>

    <view class="my-item flex-wrp">
      <view class="myitem-name flex-item">
        <text>城市：</text>
      </view>
      <picker class="myitem-text flex-item" mode="region" bindchange="bindRegionChange" value="{{thisApp.globalData.userInfo.region}}" custom-item="全部">
        <view class="picker">
          {{thisApp.globalData.userInfo.region[0]}}，{{thisApp.globalData.userInfo.region[1]}}，{{thisApp.globalData.userInfo.region[2]}}
        </view>
      </picker>
    </view>

    <button type="default" size="default" loading="{{loading}}" plain="plain" bindtap="default" hover-class="other-button-hover"> 确认修改 </button>
  </view>
</view>